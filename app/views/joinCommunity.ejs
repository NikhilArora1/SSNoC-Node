<!-- views/index.ejs -->
<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <!-- Set the viewport so this responsive site displays correctly on mobile devices -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src='/js/jquery-1.9.1.min.js'></script>
        <script src='/js/jquery.watermarkinput.js'></script>
        <link rel='stylesheet' href='/css/opensans.css'></link>
        <link rel='stylesheet' href='/css/style.css'></link>
        <link rel='stylesheet' href='/css/bootstrap.min.css'></link>
        <script src='/js/bootstrap.min.js'></script>
        <script src='/js/login_signup.js'></script>
        <script src='/js/signup.js'></script>
        <title>SSNoC - Join Community</title>
    </head>
    <body>
        <div class="container">
            <h3 class="text-center">
                <span class="fa fa-sign-in"> New User Signup</span>
                <br>
                <% if (message.length > 0) {%>
                    <div class="alert alert-danger#passport_alert"><%= message %>
                    </div>
                <% } %>
                <br>
                <div class="row text-center col-sm-6 col-sm-offset-3">
                    <div class="signup">
                        <form action="/joinCommunity" method="post">
                            <div class="form-group">
                                <input type="text" name="name" class="form-control" id="userName" placeholder="Please enter a user name"></input>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" class="form-control" id="passwd" placeholder="Please enter a password"></input>
                            </div>
                            <div class="form-group">
                                <input type="password" name="re-password" class="form-control" id="passwdRe" placeholder="Please re-enter password to confirm"></input>
                            </div>
                            <button type="submit" class="btn btn-info btn-lg" id="signupBtn">Join Community</button>
                        </form>
                    </div>
                </div>
            </h3>
        </div>
    </body>
</html>